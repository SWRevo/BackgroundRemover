<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/photo_edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <Button
                    android:id="@+id/undo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/undo_selector"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="undo"
                    android:textSize="12sp"
                    android:textColor="#F5FFFC"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <Button
                    android:id="@+id/redo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/redo_selector"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="redo"
                    android:textSize="12sp"
                    android:textColor="#F5FFFC"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_gravity="end">
                <Button
                    android:id="@+id/done"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/checkbox_marked_circle_outline_3"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="done"
                    android:textSize="12sp"
                    android:textColor="#F5FFFC"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>
    <com.alexvasilkov.gestures.views.GestureFrameLayout
        android:id="@+id/gestureView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- GestureFrameLayout can contain only one child -->

        <FrameLayout
            android:id="@+id/drawViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <id.indosw.backgroundremover.DrawView
                android:id="@+id/drawView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/loadingModal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/loadingView"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </FrameLayout>

        </FrameLayout>

    </com.alexvasilkov.gestures.views.GestureFrameLayout>
    <LinearLayout
        android:id="@+id/manual_clear_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="75dp"
        android:paddingTop="8dp"
        android:paddingRight="75dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eraser size:"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <SeekBar
            android:id="@+id/strokeBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:progress="15"
            android:max="30"
            android:layout_weight="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#131418"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <Button
                    android:id="@+id/zoom_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/magnifier_selector"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zoom"
                    android:textSize="12sp"
                    android:textColor="#F5FFFC"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <Button
                    android:id="@+id/manual_clear_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pencil_selector"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="manual"
                    android:textSize="12sp"
                    android:textColor="#F5FFFC"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <Button
                    android:id="@+id/auto_clear_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/magic_selector"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="auto"
                    android:textSize="12sp"
                    android:textColor="#F5FFFC"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>